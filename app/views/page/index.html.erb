<div class="container">
	<div class="row">
		<div class="col-md-12">
		<% @channals.each do |channal| %>
			<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
			  <h4 class="display-4"><%= channal.title %></h4>
			  <p class="lead"><%= channal.description %></p>
			</div>

			<div class="container">
				<div class="row">
					<% if channal.tvshows.length > 0 %>
						<% channal.tvshows.each do |tvshow| %>
							<div class="col-md-3">
								<div class="card shadow-sm">
							      <div class="card-header">
							        <h4 class="my-0 font-weight-normal"><%= tvshow.title %></h4>
							      </div>
							      <div class="card-body text-center">
							        <h4 class="card-title pricing-card-title">8:30 PM</h4>
							        <ul class="list-unstyled mt-3 ">
							          <li><%= tvshow.channal.channal_type.try(:titleize) %></li>
							          <li><%= channal_status(tvshow.status) %></li>
							        </ul>

							        <% if tvshow.isfavourite%>
							        	<a href="<%= tv_shows_favourite_path(tvshow,isfavourite: false) %>" class="btn btn-sm btn-block btn-outline-warning">Unfavourite</a>
							        <% else %>
							        	<a href="<%= tv_shows_favourite_path(tvshow,isfavourite: true) %>" class="btn btn-sm btn-block btn-outline-primary">Add to favourite</a>
							        <% end -%>

							      </div>
							    </div>
							</div>
						<% end -%>
						<% else %>
							<div class="container">
								<div class="row">
									<div class="col-md-12">
										<div class="text-center">
											<div class="card">
												<div class="card-body">
														<small><p>No Show Available</p></small>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						<% end -%>
				</div>
			</div>

			<% end -%>

		</div>
	</div>
</div>