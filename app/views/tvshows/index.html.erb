<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5>TV Shows</h5>
    </div>
    
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4">
           <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search" value="<%= params[:search] %>">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
        <div class="col-md-1">
          <a href="<%= tvshows_path %>" class="btn btn-outline-primary my-2 my-sm-0">Show All</a>
        </div>

        <div class="col-md-7">
          <div class="text-right">
            <a href="<%= new_tvshow_path %>" class="btn btn-outline-primary my-2 my-sm-0">Add TV Show</a>
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <% if @tvshows.length > 0 %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">TV Show Name</th>
                <th scope="col">Channal</th>
                <th scope="col">Time</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              
             <% @tvshows.each do |tvshow| %>
                <tr>
                  <td><%= tvshow.title %></td>
                  <td><%= tvshow.channal.title.try(:titleize) %></td>
                  <td><%= set_Time(tvshow.showtime) %></td>
                  <td><%= channal_status(tvshow.status) %></td>
                  <td>
                      <%= link_to 'Edit', edit_tvshow_path(tvshow) ,class: 'btn btn-primary btn-sm' %>
                      <%= link_to 'Destroy', tvshow_path(tvshow), method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger btn-sm'%>
                  </td>
                </tr>
              <% end %>
            
            </tbody>
          </table>
          <% else %>
            <div class="card">
              <div class="card-body">
                <h5>No Record Found</h5>
              </div>
            </div>
          <% end -%>
        </div>
      </div>
    </div>
  </div>
</div>